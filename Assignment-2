int Math (int myFunction)

{
	 int myResult1;
	 
	 if (myFunction == 0)
  {
			printf("Please select first integer you would like to Add\n");
			scanf("%d", &a);
			printf("Please select second integer you would like to Add\n");
			scanf("%d", &b);
			myResult1 = (a + b);
	 }
	 
   else if (myFunction == 1)
		{
					printf("Please select first integer you would like to Multiply\n");
